<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MySchoolApp.Pages.RechargeBalance">
    <ContentPage.Content>
        <StackLayout Padding="20" Orientation="Vertical">
            <Entry Text="{Binding Amount}" IsPassword="False" Placeholder="Enter Amount. exp : 5000" Keyboard="Numeric" ReturnType="Done"/>

            <Button Text="Process Payment" Command="{Binding PayCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>